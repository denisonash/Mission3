@{
    ViewData["Title"] = "Calculator";
}

@model CalcModel;

<h2>Grade Calculator:</h2>
<form method="post">
    <label>Assignments:</label>
    <input id="assignments" type="number" min="0" max="100" asp-for="Assign"/>%<br /><br />
    <label>Group Project:</label>
    <input id="gp" type="number" min="0" max="100" asp-for="GP"/>%<br /><br />
    <label>Quizzes:</label>
    <input id="quizzes" type="number" min="0" max="100" asp-for="Quiz"/>%<br /><br />
    <label>Exams:</label>
    <input id="exams" type="number" min="0" max="100" asp-for="Exam"/>%<br /><br />
    <label>INTEX:</label>
    <input id="intex" type="number" min="0" max="100" asp-for="Intex"/>%<br /><br />
    <input id="calculate" type="submit" value="Calculate" class="buttonstyle" />

    <div asp-validation-summary="All"></div>
</form>

